<h1 class="sub-header">Add a Recipe</h1>

<%= form_for(@recipe) do |form| %>
  <div>
    <%= form.text_field :name, placeholder: "Recipe Name", id: "recipe-name-input" %>
  </div>
  <div>
    <%= form.label :complexity %>
    <%= form.select :complexity, [[1,1],[2,2],[3,3]]%>
  </div>
  <div>
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, placeholder: "" %>
  </div>
  <div>
    <%= form.label :num_served_min %>
    <%= form.number_field :num_served_min, id: "num-served-min-input", placeholder: "" %>
  </div>
  <div>
    <%= form.label :num_served_max %>
    <%= form.number_field :num_served_max, id: "num-served-max-input", placeholder: "" %>
  </div>
  <div>
    <%= form.label :categories %>
    <%= form.fields_for :categories do |category_form| %>
      <%= category_form.select :id, options_for_select(@category_options) %>
    <% end %>
  </div>
  <div>
    <% step_counter = 1 %>
    <%= form.fields_for :recipe_steps do |recipe_step_form| %>
      Step <%= step_counter %>
      <%= recipe_step_form.text_area :body %>
      <% step_counter += 1 %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Add this Recipe!" %>
  </div>
<% end %>
