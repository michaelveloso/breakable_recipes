<h2>Users</h2>

<div class="user-index">
  <% @users.each do |user| %>
  <div class="user-listing">
    <%= link_to user.username, admin_user_path(user) %> <%= user.email %>
    <% if user.moderator? %>
      (<%= user.role %>)
    <% end %>
    <%= button_to "Delete", admin_user_path(user), method: :delete, class: "button delete-from-index-button tiny round inline", data: {confirm: "Are you sure you want to remove #{user.username}?"} %>
  </div>
  <% end %>
</div>
